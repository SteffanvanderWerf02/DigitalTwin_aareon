@{
    ViewData["Title"] = "MFA token";

}

<main class="m-auto p-4">
    <img class="d-block m-auto" src="/icons/logo.png">
    <h1 class="txt-clr-main-700 mb-3 fw-semibold text-center">2-Factorauthenticatie</h1>
    <div class="col-9 flex-wrap m-auto">
        @using (Html.BeginForm("MfaCheck", "login", FormMethod.Post))
        {
            <input type="text" id="mail" name="mail" hidden value="">
            @if (!string.IsNullOrEmpty(ViewBag.error))
            {
                <label class="w-100 p-2 rounded-3 alert alert-danger alert-dismissible fade show m-1">
                    @ViewBag.error
                    <button type="button"
                            class="btn-close top-0 bottom-0 my-auto"
                            data-bs-dismiss="alert"
                            aria-label="Close">
                    </button>
                </label>
            }
            <div class="row">
                <div class="col-12">
                    <label for="gebruikersnaam" class="fw-bold mx-1">2-Factorauthenticatie code</label>
                    <input class="bg-clr-main-200 w-100 border-0 m-1 p-2 rounded-3"
                           type="text"
                           name="mfa-input"
                           id="gebruikersnaam"
                           placeholder="Code invoeren...">
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <p class="text-center">
                        <a class="btn btn-link" asp-controller="Login" asp-action="Index">
                            Code opnieuw versturen
                        </a>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <input class="bg-clr-main-500 txt-clr-main-100 w-100 btn-main pe-auto border-0 fw-bold rounded-3 px-3 py-2 m-1"
                           type="submit"
                           name="submit"
                           value="LOGIN">
                </div>
            </div>
        }
    </div>
</main>