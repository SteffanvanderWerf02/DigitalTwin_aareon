@{
    ViewData["Title"] = "Login";
}

<main class="m-auto p-4">
    <img class="d-block m-auto" src="/icons/logo.png">
    <h1 class="txt-clr-main-700 mb-3 fw-semibold text-center">Login</h1>
    <div class="col-9 flex-wrap m-auto">
        @using (Html.BeginForm("SubmitLogin", "Login", FormMethod.Post))
        {
            @if (!string.IsNullOrEmpty(ViewBag.error))
            {
                <label class="w-100 p-2 rounded-3 alert alert-danger alert-dismissible fade show m-1">
                    @ViewBag.error
                    <button type="button"
                            class="btn-close top-0 bottom-0 my-auto"
                            data-bs-dismiss="alert"
                            aria-label="Close">
                    </button>
                </label>
            }
            <div class="row">
                <div class="col-12 col-sm-12">
                <label for="gebruikersnaam" class="fw-bold mx-1">Gebruikersnaam</label>
                    <input class="bg-clr-main-200 w-100 border-0 m-1 p-2 rounded-3"
                           type="email"
                           name="mail"
                           id="gebruikersnaam"
                           placeholder="E-mail...">
                </div>
            </div>
            <div class="row">
                <div class="position-relative col-12 col-sm-12">
                    <label for="wachtwoord" class="fw-bold mx-1">Wachtwoord</label>
                    <input class="bg-clr-main-200 border-0 w-100 d-block m-1 p-2 rounded-3"
                           type="password"
                           name="password"
                           id="wachtwoord"
                           placeholder="Wachtwoord...">
                    <span class="material-icons position-absolute bottom-0 my-auto h-50 end-0 translate-middle-x user-select-none" id="togglePassword">
                        visibility_off
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <input class="bg-clr-main-500 w-100 btn-main text-white pe-auto border-0 fw-bold rounded-3 px-3 py-2 m-1"
                           type="submit"
                           name="submit"
                           value="LOGIN">
                </div>
            </div>
        }
    </div>
</main>
<script src="~/js/password.js"></script>
